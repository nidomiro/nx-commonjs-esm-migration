{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "composite": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "declaration": true
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
